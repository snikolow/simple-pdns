{% embed 'base.html.twig' %}
    {% set pageTitle = 'page_titles.members' | trans({}, 'titles') %}

    {% block body %}
        <div class="row">
            <div class="col-12 mb-2">
                <a href="{{ path('action.member.create') }}" class="btn btn-primary btn-sm">
                    <i class="fa fa-plus"></i>
                    {{ 'add_entry' | trans({}, 'buttons') }}
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">{{ 'default_list_title' | trans({}, 'titles') }}</h4>
                        <table class="table table-hover"
                               data-role="member-data-table"
                               data-ajax="{{ path('action.member.xhr.data_table') }}"
                               data-processing="true"
                               data-server-side="true"
                               data-page-length="10"
                               data-searching="false"
                               data-ordering="false"
                               data-length-change="false"
                               data-edit-link-format="{{ path('action.member.update', {id: '__ID__'}) }}"
                               style="width: 100%;"
                        >
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">{{ 'member.username' | trans({}, 'forms') }}</th>
                                    <th scope="col">{{ 'member.display_name' | trans({}, 'forms') }}</th>
                                    <th>{{ 'general.actions' | trans({}, 'forms') }}</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block javascripts %}
        <script type="text/javascript" src="{{ asset('build/js/pages/member.js') }}"></script>
    {% endblock %}
{% endembed %}
