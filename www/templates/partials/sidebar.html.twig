{% set items = getSidebarItems() %}
<aside class="left-sidebar" data-sidebarbg="skin6">
    <div class="scroll-sidebar">
        <nav class="sidebar-nav">
            <ul id="sidebarnav">
                {% if app.user.displayName is defined and app.user.username is defined %}
                <li>
                    <div class="user-profile d-flex no-block dropdown mt-3">
                        <div class="user-pic"><img src="{{ asset('build/images/users/1.jpg') }}" alt="users" class="rounded-circle" width="40"></div>
                        <div class="user-content hide-menu ml-2">
                            <a href="javascript:void(0)" class="" id="Userdd" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <h5 class="mb-0 user-name font-medium">
                                    {{ app.user.displayName }}
                                    <i class="fa fa-angle-down"></i>
                                </h5>
                                <span class="op-5 user-email">{{ app.user.username }}</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="member-area">
                                <a class="dropdown-item" href="{{ path('action.security.profile') }}">
                                    <i class="fa fa-user"></i>
                                    {{ 'member.profile' | trans({}, 'sidebar') }}
                                </a>
                                <a class="dropdown-item" href="{{ path('action.security.change_password') }}" aria-labelledby="change-password">
                                    <i class="fa fa-gear"></i>
                                    {{ 'member.change_password' | trans({}, 'sidebar') }}
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path('action.security.logout') }}">
                                    <i class="fa fa-sign-out"></i>
                                    {{ 'member.logout' | trans({}, 'sidebar') }}
                                </a>
                            </div>
                        </div>
                    </div>
                </li>
                {% endif %}
                {% for entry in items if items is not empty %}
                <li class="sidebar-item">
                    <a class="sidebar-link waves-effect waves-dark sidebar-link" href="{{ entry.location }}" aria-expanded="false">
                        {% if entry.icon is defined and entry.icon is not empty %}
                        <i class="{{ entry.icon }}"></i>
                        {% endif %}
                        <span class="hide-menu">
                            {{ entry.label }}
                        </span>
                    </a>
                </li>
                {% endfor %}
            </ul>
        </nav>
    </div>
</aside>
