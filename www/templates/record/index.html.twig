{% embed 'base.html.twig' %}
    {% set pageTitle = 'page_titles.records' | trans({}, 'titles') %}

    {% block body %}
        <div class="row">
            <div class="col-12 mb-2">
                <a href="{{ path('action.record.create', {domain: domain.id}) }}" class="btn btn-sm btn-primary">
                    <i class="fa fa-plus"></i>
                    {{ ('add_entry' | trans({}, 'buttons')) }}
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">{{ 'default_list_title' | trans({}, 'titles') }}</h4>
                        <table class="table table-hover"
                               data-role="record-data-table"
                               data-ajax="{{ path('action.record.xhr.data_table', {domain: domain.id}) }}"
                               data-processing="true"
                               data-server-side="true"
                               data-page-length="10"
                               data-searching="false"
                               data-ordering="false"
                               data-length-change="false"
                               data-edit-link-format="{{ path('action.record.update', {id: '__ID__', domain: '__DOMAIN_ID__'}) }}"
                               style="width: 100%;"
                        >
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">{{ 'record.name' | trans({}, 'forms') }}</th>
                                    <th scope="col">{{ 'record.type' | trans({}, 'forms') }}</th>
                                    <th scope="col">{{ 'record.ttl' | trans({}, 'forms') }}</th>
                                    <th scope="col">{{ 'record.priority' | trans({}, 'forms') }}</th>
                                    <th>{{ 'general.actions' | trans({}, 'forms') }}</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block javascripts %}
        <script type="text/javascript" src="{{ asset('build/js/pages/record.js') }}"></script>
    {% endblock %}
{% endembed %}
